{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "CommonJS",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": "."
  },
  "include": ["tools/ts/**/*.ts"],
  "exclude": ["node_modules", "tmp"]
}
